<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="friendsem" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.saligh.friends.db.Users</class>
        <class>com.saligh.friends.db.FriendsPK</class>
        <class>com.saligh.friends.db.Friends</class>
        <class>com.saligh.friends.db.Up</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="${JDBC_DATABASE_URL}?sslmode=require"/>
            <property name="javax.persistence.jdbc.user" value="${JDBC_DATABASE_USERNAME}"/>
            <property name="javax.persistence.jdbc.password" value="${JDBC_DATABASE_PASSWORD}"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
            <!--<property name="hibernate.current_session_context_class" value="org.springframework.orm.hibernate4.SpringSessionContext" />-->
            <property name="hibernate.jta.allowTransactionAccess" value="true"/>
            <!--<property name="hibernate.connection.autocommit" value="true" />-->
            <!--<property name="hibernate.hbm2ddl.auto" value="update"/>-->
        </properties>
    </persistence-unit>
</persistence>